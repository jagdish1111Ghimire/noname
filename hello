#include <stdio.h>
double ans(double num);
double ans2(double num);
double ans3(double num);
int main() {
	int num;
	double a,b,c;
	
	printf("enter the number to get area");
	scanf("%d",num);
	
a = ans(num);
b= ans2(num);
c= ans2(num);

	
	printf("area of circle is %d %.2f" ,num,a);
	printf("diameter of circle is %d %.2f" ,num,b);
	printf("Circumference of circle is %d %.2f" ,num,c);
	
	 }
	
	double ans (double num){
		return (3.14*num*num);
	}
	double ans2(double num){
		return ( 2 * num);
	}
	double ans3(double num){
		return(2*3.14*num);
		}

	
	
